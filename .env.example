# =============================================================================
# IvyArc Spring Cloud Microservices - Environment Configuration
# =============================================================================
# Copy this file to .env and customize the values for your environment

# =============================================================================
# DATA DIRECTORIES
# =============================================================================
# Base directory for persistent data storage
DATA_DIR=./data

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Main Database
POSTGRES_DB=ivyarc_main
POSTGRES_USER=ivyarc_user
POSTGRES_PASSWORD=ivyarc_secure_password_change_me
POSTGRES_PORT=5432

# Individual Service Databases (created automatically)
AUTH_DB_NAME=auth_db
AUTHORIZATION_DB_NAME=authorization_db
USER_MANAGEMENT_DB_NAME=user_management_db
AUDIT_DB_NAME=audit_db

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# =============================================================================
# MESSAGE BROKER CONFIGURATION
# =============================================================================
# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin_secure_password_change_me
RABBITMQ_VHOST=ivyarc
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Prometheus Configuration
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_secure_password_change_me

# Zipkin Tracing
ZIPKIN_PORT=9411

# =============================================================================
# EMAIL CONFIGURATION (Development)
# =============================================================================
# MailDev for testing emails in development
MAILDEV_SMTP_PORT=1025
MAILDEV_WEB_PORT=1080

# =============================================================================
# SPRING CLOUD CONFIGURATION
# =============================================================================
# Service Discovery (Eureka)
EUREKA_SERVER_PORT=8761
EUREKA_DEFAULT_ZONE=http://localhost:8761/eureka

# Configuration Server
CONFIG_SERVER_PORT=8888
CONFIG_SERVER_GIT_URI=https://github.com/your-org/ivyarc-config.git
CONFIG_SERVER_GIT_USERNAME=
CONFIG_SERVER_GIT_PASSWORD=

# API Gateway
API_GATEWAY_PORT=8080

# =============================================================================
# MICROSERVICES PORTS
# =============================================================================
# Core Services
AUTH_SERVICE_PORT=8081
AUTHORIZATION_SERVICE_PORT=8082
USER_MANAGEMENT_SERVICE_PORT=8083
AUDIT_SERVICE_PORT=8084

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_that_is_at_least_256_bits_long_for_hs256_algorithm
JWT_ACCESS_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=86400000
JWT_ISSUER=ivyarc-auth-service

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:4200

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Active Spring Profile
SPRING_PROFILES_ACTIVE=development

# Logging Level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_COMPANY_AUTH=DEBUG

# =============================================================================
# DOCKER COMPOSE PROFILES
# =============================================================================
# Available profiles: development, production, monitoring, local
COMPOSE_PROFILES=development,monitoring

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Docker Network Settings
NETWORK_SUBNET=172.20.0.0/16
NETWORK_GATEWAY=172.20.0.1

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload and development features
DEVELOPMENT_DEBUG=true
DEVELOPMENT_HOT_RELOAD=true

# Maven settings for development
MAVEN_OPTS=-Xmx2048m -XX:MaxPermSize=512m

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Production-specific settings (uncomment and modify for production)
# SPRING_PROFILES_ACTIVE=production
# POSTGRES_PASSWORD=ultra_secure_production_password
# RABBITMQ_PASSWORD=ultra_secure_rabbitmq_password
# GRAFANA_PASSWORD=ultra_secure_grafana_password
# JWT_SECRET=ultra_secure_production_jwt_secret_key_at_least_256_bits_long
# LOGGING_LEVEL_ROOT=WARN
# LOGGING_LEVEL_COM_COMPANY_AUTH=INFO